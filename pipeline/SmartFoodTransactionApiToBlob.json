			{
				"name": "AKVPassword",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": true,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://adf-siva-dev-kv.vault.azure.net/secrets/SmartFoodsRestAPIPassword/a189d7d48eff43d49c697c73f1b83315?api-version=7.0",
